<Window x:Class="Verkeerslicht.VerkeersLicht"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VerkeersLicht" Height="350" Width="525">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <StackPanel Background="Yellow">
            <Ellipse Name="RoodLicht" Fill="Red" Height="71" HorizontalAlignment="Left" VerticalAlignment="Top" Width="69" Opacity="1" Margin="10"></Ellipse>
            <Ellipse Name="OranjeLicht" Fill="Orange" Height="71" HorizontalAlignment="Left" VerticalAlignment="Center" Width="69" Opacity="1" Margin="10"></Ellipse>
            <Ellipse Name="GroenLicht" Fill="Green" Height="71" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="69" Opacity="1" Margin="10"></Ellipse>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Margin="50">
            <Button Name="GoButton" Content="Go" Background="Green" Height="30" Width="100" Margin="10" IsEnabled="False" Click="GoButton_Click"></Button>
            <Button Name="OpgeletButton" Content="Opgelet" Background="Orange" Height="30" Width="100" Margin="20" IsEnabled="True" Click="OpgeletButton_Click"></Button>
            <Button Name="StopButton" Content="Stop" Background="Red" Height="30" Width="100" Margin="20" IsEnabled="False" Click="StopButton_Click"></Button>
        </StackPanel>
    </StackPanel>
</Window>
